html,body
  padding: 0
  margin: 0
  height: 100%

#app
  width: 100vw
  height: 100vh
  display: flex
.painter
  width: 80%
.line
  width: 1px
  background: #9b9b9b
  display flex
  align-items: center
  justify-content: center
  .camera-icon
    background #fff
    box-shadow: rgba(0,0,0,.15) 0 0 4px
    transform: translateX(0)
    border-radius 50%
    cursor pointer
    width 60px
    height 60px
    &:hover 
      box-shadow: rgba(0,0,0,.15) 0 0 8px
    img 
      width: 40px
      height 40px
      margin 10px
      display block

@media screen and (max-width 500px)
  #app
    flex-direction: column
  .line 
    width: 100%
    height 1px
    margin-bottom: 30px
    .camera-icon 
      transform: translateX(0)  
  .painter
    width: 100%
    height 80%

